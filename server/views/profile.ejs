<% layout('layout') -%>
<div style="text-align:center;">
  <h1><%= user.name %></h1>
</div>
    <style>
      #map_canvas {
        width: 100%;
        height: 400px;
        border: solid;
        margin-bottom: 30px;
        border-radius: 10px;
      }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
      function initialize() {
        var mapCanvas = document.getElementById('map_canvas');
        var mapOptions = {
          center: new google.maps.LatLng(37.7635478, -122.448953),
          zoom: 14,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var map = new google.maps.Map(mapCanvas, mapOptions);
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>

    <div id="map_canvas"></div>

<div class="col-sm-6">
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Proximity Index</th>
    </tr>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.dataValues.proximities[0].value %></td>
    </tr>
  </table>
</div>
<div class="col-sm-6" style="height:800px; overflow-y:scroll;">
  <table class="table">
    <tr>
      <th>Location (Latitude, Longitude)</th>
      <th>Date</th>
    </tr>
    <% user.dataValues.locations.forEach(function(location) { %>
    <tr>
      <td>(<%= location.latitude %>, <%= location.longitude %>)</td>
      <td><%= location.date.toGMTString() %></td>
    </tr>
    <% }) %>
  </table>
</div>
